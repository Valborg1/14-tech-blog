<div class="row">
  <div class="col-md-6">
    <h3>Create a New Blog Post</h3>

<form>
  <div class="form-group mb-3">
    <label class="newPost" for="blog-name">Blog Title</label>
    <input type="email" class="form-control" id="blog-title" placeholder="Title">
  </div>
  <div class="form-group mb-3">
    <label class="newPost" for="blog-desc">Blog Text</label>
    <textarea type="text-area" class="form-control" id="blog-text" placeholder="Text"></textarea>
  </div>
  <button id="submit-post" type="submit" class="btn btn-primary">Submit New Blog</button>
</form>
{{!-- End of Col 1 --}}
</div>

<div class="col-md-6">
      <h3>Post History</h3>
{{#each posts as |post|}}


<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Last updated {{format_date updatedAt}}</h6>
    <p class="card-text">{{trim content}}</p>
    <a href="/post/{{id}}" class="card-link">Read and Edit Blog</a>
  </div>
</div>

{{/each}}

  {{!-- End of Col 2 --}}
  </div>

{{!-- End of Row --}}
</div>

<script src="./js/profile.js"></script>

<script>
  localStorage.setItem('user_id', {{id}});
</script>


