<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="blog-name">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Blog Text:</label>
        <textarea class="form-input" id="blog-text" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button id="submit-post" type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

<script src="./js/profile.js"></script>

<script>
  localStorage.setItem('user_id', {{id}});
</script>


